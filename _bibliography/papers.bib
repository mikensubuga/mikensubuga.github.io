  urldate    = {2019-10-16},
  journal    = {BMC Infectious Diseases},
  author     = {Aruhomukama, Dickson and Najjuka, Christine F and Kajumbula, Henry and Okee, Moses and Mboowa, Gerald and Sserwadda, Ivan and Mayanja, Richard and Joloba, Moses L and Kateete, David P}, 
